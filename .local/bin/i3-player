#!/bin/bash

# Run the following command in a shell once to make it work:
#
# sudo apt install playerctl

case "$1" in
    previous)
        playerctl previous
        ;;
    play-pause)
        playerctl play-pause
        ;;
    next)
        playerctl next
        ;;
    *)
        echo "Usage: $0 {previous|play-pause|next}"
        exit 2
esac

exit 0
