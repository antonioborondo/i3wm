#!/bin/bash

case "$1" in
  personal-laptop)
    xrandr \
      --output DP-1 --off \
      --output DP-1-1 --off \
      --output DP-1-2 --off \
      --output DP-1-3 --off \
      --output DP-2 --off \
      --output eDP-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal \
      --output HDMI-1 --off \
      --output HDMI-2 --off
    ;;
  personal-external)
    xrandr \
      --output DP-1 --off \
      --output DP-1-1 --off \
      --output DP-1-2 --off \
      --output DP-1-3 --primary --mode 3440x1440 --pos 0x0 --rotate normal \
      --output DP-2 --off \
      --output eDP-1 --off \
      --output HDMI-1 --off \
      --output HDMI-2 --off
    ;;
  work-laptop)
    xrandr \
      --output DP-1 --off \
      --output DP-2 --off \
      --output DP-3 --off \
      --output DP-4 --off \
      --output DP-4-1 --off \
      --output DP-4-2 --off \
      --output DP-4-3 --off \
      --output eDP-1 --primary --mode 3456x2160 --pos 0x0 --rotate normal \
      --output HDMI-1 --off
    ;;
  work-external)
    xrandr \
      --output DP-1 --off \
      --output DP-2 --off \
      --output DP-3 --off \
      --output DP-4 --off \
      --output DP-4-1 --off \
      --output DP-4-2 --off \
      --output DP-4-3 --primary --mode 3440x1440 --pos 0x0 --rotate normal \
      --output eDP-1 --off \
      --output HDMI-1 --off
    ;;
  *)
    echo "Usage: $0 {personal-laptop|personal-external|work-laptop|work-external}"
    exit 2
esac

exit 0
