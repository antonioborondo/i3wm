#!/bin/bash

case "$1" in
  laptop)
    if [[ $(uname -a) =~ "mega" ]]
    then
      xrandr \
        --output DP-1 --off \
        --output DP-2 --off \
        --output DP-3 --off \
        --output DP-4 --off \
        --output DP-4-1 --off \
        --output DP-4-2 --off \
        --output DP-4-3 --off \
        --output eDP-1 --primary --mode 3456x2160 --pos 0x0 --rotate normal \
        --output HDMI-1 --off
    else
      xrandr \
        --output DP-1 --off \
        --output DP-1-1 --off \
        --output DP-1-2 --off \
        --output DP-1-3 --off \
        --output DP-2 --off \
        --output eDP-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal \
        --output HDMI-1 --off \
        --output HDMI-2 --off
    fi
    ;;
  external)
    if [[ $(uname -a) =~ "mega" ]]
    then
      xrandr \
        --output DP-1 --off \
        --output DP-2 --off \
        --output DP-3 --off \
        --output DP-4 --off \
        --output DP-4-1 --off \
        --output DP-4-2 --off \
        --output DP-4-3 --primary --mode 3440x1440 --pos 0x0 --rotate normal \
        --output eDP-1 --off \
        --output HDMI-1 --off
    else
      xrandr \
        --output DP-1 --off \
        --output DP-1-1 --off \
        --output DP-1-2 --off \
        --output DP-1-3 --primary --mode 3440x1440 --pos 0x0 --rotate normal \
        --output DP-2 --off \
        --output eDP-1 --off \
        --output HDMI-1 --off \
        --output HDMI-2 --off
    fi
    ;;
  *)
    echo "Usage: $0 {laptop|external}"
    exit 2
esac

exit 0
